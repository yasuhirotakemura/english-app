<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EnglishApp.Maui.ViewModels"
             x:Class="EnglishApp.Maui.Views.ProblemView"
             Title="問題一覧">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="10">
                <!-- タイトル -->
                <Border BackgroundColor="White" StrokeThickness="1" Stroke="#D3D3D3"
            Padding="15" StrokeShape="RoundRectangle 10">
                    <Label Text="{Binding Title}" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="Black"/>
                </Border>

                <!-- 本文 -->
                <Border BackgroundColor="White" StrokeThickness="1" Stroke="#D3D3D3"
            Padding="15" StrokeShape="RoundRectangle 10">
                    <Label Text="{Binding Content}" 
               FontSize="18" 
               TextColor="DarkGray"/>
                </Border>

                <!-- 選択肢 -->
                <Label Text="選択肢を選んでください" 
           FontSize="18" 
           FontAttributes="Bold" 
           TextColor="Black" 
           Margin="0,10,0,5"/>

                <Border BackgroundColor="White" StrokeThickness="1" Stroke="#D3D3D3"
            Padding="15" StrokeShape="RoundRectangle 10">
                    <CollectionView ItemsSource="{Binding Choices}" 
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <RadioButton Content="{Binding QuestionText}" 
                                     GroupName="ChoicesGroup"
                                     BackgroundColor="Transparent"
                                     FontSize="16"
                                     TextColor="Black"
                                     Padding="5"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>