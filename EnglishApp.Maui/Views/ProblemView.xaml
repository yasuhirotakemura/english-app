<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EnglishApp.Maui.ViewModels"
             x:Class="EnglishApp.Maui.Views.ProblemView"
             Title="問題一覧">
    <ContentPage.BindingContext>
        <viewModels:ProblemViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <VerticalStackLayout Padding="10">
            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold"/>
            <Label Text="{Binding Content}" FontSize="18"/>
            <Button Text="戻る" Command="{Binding BackCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>