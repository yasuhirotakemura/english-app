<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnglishApp.Maui.Views.SignUpView"
             Title="新規登録">
    <Grid Padding="16">
        <Border Padding="16">
            <ScrollView>
                <VerticalStackLayout Spacing="24">
                    <Label Text="さあ、始めましょう！" 
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="8">
                        <Label Text="メールアドレス" FontSize="16" />
                        <Entry Text="{Binding Email, Mode=TwoWay}" 
                           Placeholder="メールアドレスを入力" 
                           Keyboard="Email"
                           HeightRequest="48"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="パスワード" FontSize="16" />
                        <Entry Text="{Binding Password, Mode=TwoWay}" 
                           Placeholder="パスワードを入力"
                           IsPassword="True"
                           MaxLength="50"
                           HeightRequest="48"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="パスワード（確認用）" FontSize="16" />
                        <Entry Text="{Binding ConfirmPassword, Mode=TwoWay}" 
                           Placeholder="パスワードを入力（確認用）"
                           IsPassword="True"
                           MaxLength="50"
                           HeightRequest="48"/>
                    </VerticalStackLayout>

