<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EnglishApp.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EnglishApp.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="EnglishApp.Maui">

    <ShellContent
            Route="welcome"
            ContentTemplate="{DataTemplate local:WelcomeView}" />

    <TabBar>
        <ShellContent
            Title="ホーム"
            Icon="home.png"
            Route="home"
            ContentTemplate="{DataTemplate local:HomeView}" />

        <ShellContent
            Title="問題集"
            Icon="textbook.png"
            Route="textlist"
            ContentTemplate="{DataTemplate local:HomeView}" />

        <ShellContent
            Title="お気に入り"
            Icon="star.png"
            Route="favorites"
            ContentTemplate="{DataTemplate local:HomeView}" />

        <ShellContent
            Title="単語帳"
            Icon="book.png"
            Route="wordbook"
            ContentTemplate="{DataTemplate local:HomeView}" />

        <ShellContent
            Title="設定"
            Icon="settings.png"
            Route="settings"
            ContentTemplate="{DataTemplate local:HomeView}" />
    </TabBar>


</Shell>
